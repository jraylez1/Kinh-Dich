
@{
    Layout = null;
    var currentUser =  (CurrentUser)ViewBag.CurrentUser ?? new CurrentUser();
    var languageCode = ViewBag.LanguageCode;
}  

<!DOCTYPE html>
<html lang="@languageCode">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Service portal | @ViewBag.Title</title>
    @* <script src="/themes/admin-lte/plugins/jquery-ui/jquery-ui.min.css"></script> *@
    @await RenderSectionAsync("CssLibs", false)
    <link rel="stylesheet" href="/themes/admin-cp/css/app.css">
    @await RenderSectionAsync("Css", false)
</head>
<body class="hold-transition sidebar-mini text-sm">
<div class="wrapper">
<!-- Navbar -->
<nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                <i class="fas fa-bars"></i>
            </a>
        </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                <i class="fas fa-expand-arrows-alt"></i>
            </a>
        </li>
        <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
                <i class="far fa-user"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                <span class="dropdown-item dropdown-header">@SharedLocalizer.GetText("Hi, {0}", currentUser.Fullname)</span>
                <div class="dropdown-divider"></div>
                <a href="@Url.Action("ChangePassword", "Authentication")" class="dropdown-item" id="btnChangePassword">
                    <i class="fas fa-lock"></i> @SharedLocalizer.GetText("Change password")
                </a>
                <div class="dropdown-divider"></div>
                <a href="@Url.Action("SignOut", "Authentication")" class="dropdown-item" id="btnSignOut">
                    <i class="fas fa-sign-out-alt"></i> @SharedLocalizer.GetText("Sign out")
                </a>
            </div>
        </li>
    </ul>
</nav>
<!-- /.navbar -->

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">
    <!-- Brand Logo -->
    <a href="@Url.Action("Index", "Home")" class="brand-link">
        <img src="~/themes/admin-cp/images/no-avatar.png"
             alt="TranS Admin"
             class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light"> Hymalia Admin</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="/themes/admin-cp/images/no-avatar.png" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">@currentUser.Fullname</a>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column nav-compact" data-widget="treeview" role="menu" data-accordion="false">
                @Html.Raw(currentUser.HtmlMenus)
            </ul>
        </nav>

        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">@ViewBag.Title</h1>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        @RenderBody()
    </div>
</div>
<!-- /.content -->
</div>
<!-- /.content-wrapper -->

<!-- Main Footer -->
<footer class="main-footer">
    <strong>Copyright &copy; 2021 <a href="https://adminlte.io">Hymalia</a>.</strong>
    All rights reserved.
    <div class="float-right d-none d-sm-inline-block">
        <b>Version</b> 1.0.1
    </div>
</footer>
</div>
<script src="/themes/admin-lte/plugins/jquery/jquery.min.js"></script>
<script src="/themes/admin-lte/plugins/jquery-ui/jquery-ui.js"></script>
<script src="/themes/admin-lte/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="/themes/admin-lte/plugins/toastr/toastr.min.js"></script>
<script src="/themes/admin-lte/plugins/sweetalert2/sweetalert2.min.js"></script>
<script src="/themes/admin-lte/dist/js/adminlte.min.js"></script>
<script src="/themes/admin-lte/plugins/datatables/jquery.dataTables.min.js"></script>
<script src="/themes/admin-lte/plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
<script src="/themes/admin-lte/plugins/moment/moment.min.js"></script>
<script src="/themes/admin-lte/plugins/inputmask/min/jquery.inputmask.bundle.min.js"></script>
<script src="/themes/admin-lte/plugins/daterangepicker/daterangepicker.js"></script>
<script src="/themes/admin-lte/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="/themes/admin-lte/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<script src="/themes/admin-lte/plugins/select2/js/select2.full.min.js"></script>
<script src="/themes/admin-lte/plugins/pace-progress/pace.min.js" data-pace-options='{ "ajax": true }'></script>
<script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<script src="/lib/jquery-form/jquery.form.js"></script>
<script src="/lib/boostrap-modals/boostrap-modals.js"></script>
@await RenderSectionAsync("JsLibs", false)
<script src="@($"/themes/admin-cp/locale/{languageCode}.js")"></script>
<script src="/themes/admin-cp/app.js"></script>
<script src="/themes/admin-cp/module.js"></script>
<script src="/themes/admin-cp/main.js"></script>
<script src="/themes/admin-cp/config.js"></script>
@await RenderSectionAsync("Js", false)
</body>
</html>